    <dependencies>
        <dependency>
            <groupId>org.spantus</groupId>
            <artifactId>spnt-work</artifactId>
            <classifier>${envClassifier}</classifier>
        </dependency>
        <dependency>
            <groupId>org.spantus.externals.recognition</groupId>
